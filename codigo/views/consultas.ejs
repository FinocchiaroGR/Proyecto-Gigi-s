                        </optgroup>
                    </select>
                </div>
                <div class="col s2 m3 l3 xl3">
                    <label>
                        <input type="checkbox" checked="checked" />
                        <span>Solo ciclos activos</span>
                        </label>
                </div>
            </div>
        </div>

         <!-- Título-->
        <div class="col s4 pull-s8">
            <h3>Elegir Programa:</h3>
        </div>
    </div>

    <!-- Carrousel de tarjetas -->
    <div id="carouselContainer black-text">
        <div class="carousel carousel-slider center black-text" data-indicators="true">

            <!-- Flechas a los lados -->
            <div class="carousel-fixed-item center middle-indicator">
                <div class="left">
                    <a onclick="movePrevCarousel()" class="middle-indicator-text black-text waves-effect waves-light content-indicator"><i
                            class="material-icons left black-text middle-indicator-text">chevron_left</i></a>
                </div>
    
                <div class="right">
                    <a onclick="moveNextCarousel()" class="middle-indicator-text black-text waves-effect waves-light content-indicator"><i
                            class="material-icons right black-text middle-indicator-text">chevron_right</i></a>
                </div>
            </div>

            <!-- Paneles y trajetas -->
            <%- include('includesConsultas/tarjetaProg_consult.ejs') %>
            
        </div>
    </div>

        <form action="/consultas" method="POST">
        <!--Filtros-->
        <div class="row">
        <h4>Filtros:</h4>
            <div class="col s6">
                <div>
                    <br>
                    <label>
                        <input type="checkbox" checked="checked"/>
                        <span class="flow-text"> <strong class="flow-text black-text">Solo participantes activos</strong></span>
                    </label>
                    
                </div>
                <div>
                    <br>
                    <button type="button" class="waves-effect waves-light btn-large" onclick="todosProg()"> &nbsp &nbsp Todos los programas &nbsp &nbsp</button>
                    
                </div>
                <div>
                    <br>
                    <button type="button" class="waves-effect waves-light btn-large" onclick="ningunProg()"> Deseleccionar programas </button>
                    
                </div>
            </div>
            <div class="col s6">
                <h5>Edad:</h5>
                <div class="row">
                    <div class="col s5">
                        <label>
                            <input type="number" value="1" min="0"/>
                            <span class="flow-text"> <strong class="flow-text black-text"></strong></span>
                        </label>
                    </div>
                    <div class="col s2">
                        <label>
                            <input type="checkbox" checked="checked"/>
                            <span class="flow-text"> hasta </span>
                        </label>
                        
                    </div>
                    <div class="col s5">
                        <label>
                            <input type="number" value="18" min="0"/>
                            <span class="flow-text"> <strong class="flow-text black-text"></strong></span>
                        </label>
                    </div>
                </div>
                <h5>Sexo:</h5>
                <div class="row">
                    <div class="col s6">
                        <label>
                            <a class="waves-effect waves-teal btn wideBtn">Mujeres</a>
                        </label>
                    </div>
                    <div class="col s6">
                        <label>
                            <a class="waves-effect waves-teal btn wideBtn">Hombres</a>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        
            <!--Por mostrar y consultar-->
            <div class="row ">
                <!--Por mostrar-->
                <div class="col s8">
                    <div class="row">
                        <h4>Por mostrar:</h4>
                        <div class="switch" >
                            <p class="flow-text">
                                calificaciones
                                <label>
                                    <input disabled type="checkbox" id="CalifOProg">
                                    <span class="lever"></span>
                                </label>
                                Porcentaje de avance
                            </p>
                        </div>
                        <div>
                            <label>
                                <input type="checkbox" name="datosPart" id="datosPart">
                                <span class="flow-text"> <strong class="flow-text black-text">Mostrar datos de participantes</strong> </span>
                            </label>
                            
                        </div>
                    </div>
                </div>
                <!--Boton consultar-->
                <div class="col s4">
                    <div class="row center">
                        <h4>Realizar consulta</h4><br>
                        <div style="display: none;">
                            <input type="number" id="cantProg" name="cantProg" value="0" min="0">
                        </div>
                        <div>
                            <button type="submit" class="waves-effect  waves-light btn-large"> Consulta </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    
