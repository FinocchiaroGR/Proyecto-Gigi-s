<%- include('include/head.ejs') %>
<%- include('include/titleBar.ejs') %>
<%- include('include/sideNavBar.ejs') %>

    <!-- Titulo elegir programa y selección de ciclo-->
    <div class="row">
            
        <!-- Elegir ciclo de inicio y final-->
        <div class="col s8 push-s4 "><br>
            <div class="row valign-wrapper">
                <div class="input-field col s5 m4 l4 xl4">
                    <select>
                        <% let acum_ano_ini = 1; let cont_ano_ini = acum_ano_ini; %> 
                        <% for (let l = 0; l<años.length; l++) { %>
                            <optgroup label="<%= años[l].ano_inicio %>">
                                <% for (cont_ano_ini = acum_ano_ini; cont_ano_ini < acum_ano_ini + años[l].cant_por_ano_inicio ; cont_ano_ini++) { %>
                                    <option value="<%= cont_ano_ini %>"><%= cont_ano_ini %>: <%= meses[fechasDeCiclos[cont_ano_ini-1].mes_inicio] %>-<%= fechasDeCiclos[cont_ano_ini-1].dia_inicio %></option>
                                <% } %>
                            <% acum_ano_ini = cont_ano_ini; %>
                            </optgroup>
                        <% } %>
                    </select>
                    <label>Desde Ciclo</label>
                </div>
                <div class="col s2 m4 l4 xl4 center">
                    <label>
                        <input type="checkbox" checked="checked" />
                        <span>hasta</span>
                    </label>
                </div>
                <div class="input-field col s5 m4 l4 xl4">
                    <select>
                        <% let acum_ano_fin = 1; let cont_ano_fin = acum_ano_fin; %> 
                        <% for (let l = 0; l<años.length; l++) { %>
                            <optgroup label="<%= años[l].ano_fin %>">
                                <% for (cont_ano_fin = acum_ano_fin; cont_ano_fin < acum_ano_fin + años[l].cant_por_ano_fin ; cont_ano_fin++) { %>
                                    <option value="<%= cont_ano_fin %>"><%= cont_ano_fin %>: <%= meses[fechasDeCiclos[cont_ano_fin-1].mes_fin] %>-<%= fechasDeCiclos[cont_ano_fin-1].dia_fin %></option>
                                <% } %>
                            <% acum_ano_fin = cont_ano_fin; %>
                            </optgroup>
                        <% } %>
                    </select>
                    <label>Hasta Ciclo</label>
                </div>
            </div>
        </div>

         <!-- Título-->
        <div class="col s4 pull-s8">
            <h3>Elegir Programa:</h3>
        </div>
    </div>

    <!-- Carrousel de tarjetas -->
    <div id="carouselContainer black-text">
        <div class="carousel carousel-slider center white-text" data-indicators="true">

            <!-- Flechas a los lados -->
            <div class="carousel-fixed-item center middle-indicator">
                <div class="left">
                    <a onclick="movePrevCarousel()" class="middle-indicator-text white-text waves-effect waves-light content-indicator"><i
                            class="material-icons left black-text middle-indicator-text">chevron_left</i></a>
                </div>
    
                <div class="right">
                    <a onclick="moveNextCarousel()" class="middle-indicator-text white-text waves-effect waves-light content-indicator"><i
                            class="material-icons right black-text middle-indicator-text">chevron_right</i></a>
                </div>
            </div>

            <!-- Paneles y trajetas -->
            <%- include('includesConsultas/tarjetaProg_consult.ejs') %>
            
        </div>
    </div>

        <form action="/consultas" method="POST">
        <!--Filtros-->
        <div class="row">
        <h4>Filtros:</h4>
            <div class="col s6">
                <div>
                    <br>
                    <label>
                        <input type="checkbox" checked="checked"/>
                        <span class="flow-text"> <strong class="flow-text black-text">Solo participantes activos</strong></span>
                    </label>
                    
                </div>
                <div>
                    <br>
                    <button type="button" class="waves-effect waves-light btn-large light-blue darken-2" onclick="todosProg()"> &nbsp &nbsp Todos los programas &nbsp &nbsp</button>
                    
                </div>
                <div>
                    <br>
                    <button type="button" class="waves-effect waves-light btn-large light-blue darken-2" onclick="ningunProg()"> Deseleccionar programas </button>
                    
                </div>
            </div>
            <div class="col s6">
                <h5>Edad:</h5>
                <div class="row valign-wrapper">
                    <div class="col s5">
                        <label>
                            <input type="number" value="1" min="0"/>
                            <span class="flow-text"> <strong class="flow-text black-text"></strong></span>
                        </label>
                    </div>
                    <div class="col s2">
                        <label>
                            <input type="checkbox" checked="checked"/>
                            <span class="flow-text"> hasta </span>
                        </label>
                        
                    </div>
                    <div class="col s5">
                        <label>
                            <input type="number" value="18" min="0"/>
                            <span class="flow-text"> <strong class="flow-text black-text"></strong></span>
                        </label>
                    </div>
                </div>
                <h5>Sexo:</h5>
                <div class="row">
                    <div class="col s6">
                        <label>
                            <a class="waves-effect waves-teal btn wideBtn light-blue darken-2">Mujeres</a>
                        </label>
                    </div>
                    <div class="col s6">
                        <label>
                            <a class="waves-effect waves-teal btn wideBtn light-blue darken-2">Hombres</a>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        
            <!--Por mostrar y consultar-->
            <div class="row ">
                <!--Por mostrar-->
                <div class="col s8">
                    <div class="row">
                        <h4>Por mostrar:</h4>
                        <div class="switch" >
                            <p class="flow-text">
                                calificaciones
                                <label>
                                    <input disabled type="checkbox" id="CalifOProg" name="CalifOProg">
                                    <span class="lever"></span>
                                </label>
                                Porcentaje de avance
                            </p>
                        </div>
                        <div>
                            <label>
                                <input type="checkbox" name="datosPart" id="datosPart">
                                <span class="flow-text"> <strong class="flow-text black-text">Mostrar datos de participantes</strong> </span>
                            </label>
                            
                        </div>
                        <br>
                        <div>
                            <label>
                                <input type="checkbox" name="datosProg" id="datosProg">
                                <span class="flow-text"> <strong class="flow-text black-text">Mostrar datos de programas</strong> </span>
                            </label>
                            
                        </div>
                    </div>
                </div>
                <!--Boton consultar-->
                <div class="col s4">
                    <div class="row center">
                        <h4>Realizar consulta</h4><br>
                        <div style="display: none;">
                            <input type="number" id="cantProg" name="cantProg" value="0" min="0">
                        </div>
                        <br>
                        <div>
                            <button type="submit" class="waves-effect  waves-light btn-large light-blue darken-2"> Consulta </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    
<%- include('include/footer.ejs') %>