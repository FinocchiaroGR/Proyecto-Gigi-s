
<p><strong>Ciclos del a√±o en curso</strong></p>
<ul class="collapsible"> 
    <% for (let ciclo of ciclos_aactual) { %>
        <li>
            <% if (ciclo.idCiclo === idUltimoCiclo || ciclo.idCiclo === (idUltimoCiclo-1)) { 
                let ruta = '/gestionAdmin/gestionCiclos/inscribir/'+ ciclo.idCiclo; %>
                <div class="collapsible-header" >
                    <a  class = "black-text" href="<%= ruta %>">
                        <%= mes[ciclo.fechaInicial.getMonth()] %> - <%= mes[ciclo.fechaFinal.getMonth()] %>
                    </a>
                    <span class="badge" >
                        <%= ciclo.fechaInicial.getFullYear() %>
                    </span>
                </div>
            <% }else{ %>
                <div class="collapsible-header" href="">
                    <a  class = "black-text" href="/gestionAdmin/gestionCiclos/perfil-ciclo">
                        <%= mes[ciclo.fechaInicial.getMonth()] %> - <%= mes[ciclo.fechaFinal.getMonth()] %>
                    </a>
                    <span class="badge" >
                        <%= ciclo.fechaInicial.getFullYear() %>
                    </span>
                </div>

            <% } %>
        </li>
    <% } %>
</ul>

<p><br><strong>Ciclos anteriores</strong></p>
<ul class="collapsible"> 
    <% for (let p of a_pasados) { %>
            <li>
                <div class="collapsible-header"><%= p.anio %></div>
                <div class="collapsible-body">
                    <div class="collection">
                        <% for (let ciclo of ciclos) { %>
                            <% if (ciclo.fechaInicial.getFullYear() === p.anio) { %>
                                <a  href="/gestionAdmin/gestionCiclos/perfil-ciclo" class="collection-item" style="cursor: pointer;"> <%= mes[ciclo.fechaInicial.getMonth()] %> - <%= mes[ciclo.fechaFinal.getMonth()] %></a>         
                            <% } %>        
                        <% } %>
                    </div>
                </div>
            </li>       
    <% } %>
</ul>
<input type="hidden" id="_csrf" name="_csrf" value="<%= csrfToken %>" >


