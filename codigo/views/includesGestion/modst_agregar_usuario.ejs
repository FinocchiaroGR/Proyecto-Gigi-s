<form action="/gestionAdmin/gestionUsuarios" method="POST" onsubmit="toastRegUser()">
  <div class="modal-content">
      <h3>Nuevo usuario</h3>
      <ul>
        <li><strong><br>Nombre</strong></li>
        <li>
          <div class="input">
            <input id="nombre" name="nombre" type="text" class="validate"  placeholder="Nombre(s)" required>
          </div>
        </li>
        <li><strong><br>Apellido paterno</strong></li>
        <li>
          <div class="input">
            <input id="apellidoP" name="apellidoP" type="text" class="validate"  placeholder="Apellido paterno">
          </div>
        </li>
        <li><strong><br>Apellido materno</strong></li>
        <li>
          <div class="input">
            <input id="apellidoM" name="apellidoM" type="text" class="validate"  placeholder="Apellido materno">
          </div>
        </li>
        <li><strong><br>Correo</strong></li>
        <li>
          <div class="input">
            <input id="correo" name="correo" type="email" class="validate"  placeholder="correo@mail.com" required>
            <span class="helper-text" data-error="Introduce un correo válido" data-success="Correo válido"></span>
          </div>
        </li>
        <li><strong><br>Roles</strong></li>
        <li>
          <div class="input-field m4" required >
            <select name = "selRol" onchange="camposTerapeuta(this)" multiple required>
              <% for (let rol of roles) { %>
                <% if (rol.idRol != 1) { %> 
                  <option value="<%= rol.idRol %>"><%= rol.nombre %></option>
                <% } %>
              <% } %>
            </select>
            <label>Selecciona los roles que desees asignar.</label>
          </div>
        </li>
        <li style = "visibility:hidden" id = "campoT1"><strong><br>Formación profesional</strong></li>
        <li style = "visibility:hidden" id = "campoT2">
          <div class="input-field ">
              <input id="titulo" name="titulo" type="text" class="validate">
              <label for="titulo">Título</label>
          </div>
        </li>
        <li style = "visibility:hidden" id = "campoT3"><strong><br>Currículum</strong></li>
        <li style = "visibility:hidden" id = "campoT4">
            <div class="file-field input-field">
                <div class="file-field input-field waves-effect waves-light btn-small white black-text">
                    <i class="material-icons left">file_upload</i>Subir</a>
                    <input type="file" name="cv">
                </div>
            </div>
        </li>
      </ul>
  </div>
  <div class="modal-footer">
    <button  type = "submit" class="modal-action waves-effect btn-flat">Agregar</button>
  </div>
</form>
