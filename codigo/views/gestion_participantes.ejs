<%- include('include/head.ejs') %>
<%- include('include/titleBar.ejs') %>
<%- include('include/sideNavBar.ejs') %>
<body>
<div class="row">
    <div class="col s12 m4">     
      <div class="row">
        <div class="input-field col s12" >
          <i class="material-icons prefix">search</i>
          <input type="text" id="buscarParticipante" class="autocomplete" oninput="buscarParticipante('<%=permisos %>')">
          <label for="buscarParticipante">Buscar participante</label>
        </div>
      </div>
    </div>
    <div class="col">
        <div class="row">
          <div class="input-field col s12">
            <!-- Btn Agregar -->
            <% if (permisos.includes(20)) { %>
             <a class="btn-small modal-trigger light-green accent-4" href="#agregarParticipante"><i class="material-icons left">add_circle</i>Agregar</a>
            <% } %>
          </div>
        </div>
      </div>
    <!-- Inicia Modal Structure agregar participante-->
    <div id="agregarParticipante" class="modal">
      <%- include('includesGestion/modst_agregar_participante.ejs') %>  
    </div><!--Fin Modal Structure agregar participante-->
    <div class="row">
      <div class="col s12 m12">
        <%- include('includesGestion/lista_participantes.ejs') %>
      </div>
    </div>
</div>
<input type="hidden" id="bandera" value="<%= bandera%>">
</body>
<%- include('include/footer.ejs') %>

<script>
  let bandera = document.getElementById('bandera').value;
  if (bandera == 'true'){
    M.toast({html: '<%- mensaje %>', length:7500, classes: 'black'})
  }
  if (bandera == 'false'){
    M.toast({html: '<%- mensaje %>',  length:6500, classes: 'grey'})
  }
</script>
