<%- include('include/head.ejs') %>
<%- include('include/titleBar.ejs') %>
<%- include('include/sideNavBar.ejs') %>     
<div class="row">
    <div class="col s12 m4">     
        <div class="row">
            <div class="input-field col s12" >
            <i class="material-icons prefix">search</i>
            <input type="text" id="autocomplete-input" class="autocomplete">
            <label for="autocomplete-input">Nombre del usuario</label>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="row">
          <div class="input-field col s12">
            <!-- Modal Agregar -->
             <a class="waves-effect waves-light btn-small modal-trigger light-green accent-4" href="#agregarUsuario"><i class="material-icons left">add_circle</i>Agregar</a>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="row">
          <div class="input-field col s12">
              <!-- Modal Crear rol -->
             <a class="waves-effect waves-light btn-small  modal-trigger light-green accent-4" href="#crearRol"><i class="material-icons left">personal_video</i>Crear rol</a>
          </div>
        </div>
      </div>
    </div>
    <!-- Inicia Modal Structure agregar usuario-->
    <div id="agregarUsuario" class="modal">
        <div class="modal-content">
          <form>
            <h3>Nuevo usuario</h3>
            <ul>
              <li><strong><br>Nombre</strong></li>
              <li>
                <div class="input">
                  <input id="nombre" type="text" class="validate"  placeholder="Nombre(s)">
                </div>
              </li>
              <li><strong><br>Apellido paterno</strong></li>
              <li>
                <div class="input">
                  <input id="apellidoP" type="text" class="validate"  placeholder="Apellido paterno">
                </div>
              </li>
              <li><strong><br>Apellido materno</strong></li>
              <li>
                <div class="input">
                  <input id="apellidoM" type="text" class="validate"  placeholder="Apellido materno">
                </div>
              </li>
              <li><strong><br>Correo</strong></li>
              <li>
                <div class="input">
                  <input id="correo" type="email" class="validate"  placeholder="correo@mail.com">
                </div>
              </li>
              <li><strong><br>Roles</strong></li>
              <li>
                <div class="input-field m4">
                  <select name = "selRol" multiple>
                    <% for (let rol of roles) { %>  
                      <option value="<%= rol.valor %>"><%= rol.nombre %></option>
                    <% } %>
                  </select>
                  <label>Selecciona los roles que desees asignar.</label>
                </div>
              </li>
            </ul>
          </form>
        </div>
        <div class="modal-footer">
          <a href="./gestion-usuarios" class="modal-close waves-effect btn-flat">Cancelar</a>
          <a href="#"  class="modal-close waves-effect btn-flat validarRol">Agregar</a>
        </div>
    </div><!--Fin Modal Structure agregar usuario-->
    <!-- Modal Structure Crear Rol-->
    <div id="crearRol" class="modal">
        <div class="modal-content">
          <form>
            <h3>Crear rol</h3>
            <ul>
              <li>
                <div class="input">
                  <input id="nombre" type="text" class="validate"  placeholder="Nombre del rol">
                </div>
              </li>
              <table class="highlight">
                <thead>
                  <tr>
                      <th data-field="admin">Administrador</th>
                      <th data-field="gestor">Gestor</th>
                      <th data-field="terapeuta">Terapeuta</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <label>
                        <input type="checkbox" />
                        <span>Función1</span>
                      </label>
                    </td>
                    <td>
                      <label>
                        <input type="checkbox" />
                        <span>Función2</span>
                      </label>
                    </td>
                    <td>
                      <label>
                        <input type="checkbox" />
                        <span>Función3</span>
                      </label>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <label>
                        <input type="checkbox" />
                        <span>Función4</span>
                      </label>
                    </td>
                    <td>
                      <label>
                        <input type="checkbox" />
                        <span>Función5</span>
                      </label>
                    </td>
                    <td>
                      <label>
                        <input type="checkbox" />
                        <span>Función6</span>
                      </label>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <label>
                        <input type="checkbox" />
                        <span>Función7</span>
                      </label>
                    </td>
                    <td>
                      <label>
                        <input type="checkbox" />
                        <span>Función8</span>
                      </label>
                    </td>
                    <td>
                      <label>
                        <input type="checkbox" />
                        <span>Función9</span>
                      </label>
                    </td>
                  </tr>
                </tbody>
                </table>
            </ul>
          </form>
        </div>
        <div class="modal-footer">
          <a href="./gestion-usuarios" class="modal-close waves-effect btn-flat">Cancelar</a>
          <a href="#"  class="modal-close waves-effect btn-flat crearRol">Agregar</a>
        </div>
      </div><!-- Fin Modal Structure crear Rol-->
      <div class="row">
        <div class="col s12 m12">
            <%- include('includesGestion/lista_usuarios.ejs') %>
        </div>
      </div>
</div>    
<%- include('include/footer.ejs') %>