<%- include('include/head.ejs') %>
<%- include('include/titleBar.ejs') %>
<%- include('include/sideNavBar.ejs') %>     
<div class="row">
    <div class="col s12 m4">     
        <div class="row">
            <div class="input-field col s12" >
            <i class="material-icons prefix">search</i>
            <input type="text" id="autocomplete-input" class="autocomplete">
            <label for="autocomplete-input">Nombre del usuario</label>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="row">
          <div class="input-field col s12">
            <!-- Modal Agregar -->
             <a class="waves-effect waves-light btn-small modal-trigger light-green accent-4" href="#agregarUsuario"><i class="material-icons left">add_circle</i>Agregar</a>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="row">
          <div class="input-field col s12">
              <!-- Modal Modificar rol -->
             <a class="waves-effect waves-light btn-small  modal-trigger light-green accent-4" href="#modificarRol"><i class="material-icons left">personal_video</i>Modificar rol</a>
          </div>
        </div>
      </div>
    </div>
    <!-- Inicia Modal Structure agregar usuario-->
    <div id="agregarUsuario" class="modal">
        <div class="modal-content">
          <form>
            <h3>Nuevo usuario</h3>
            <ul>
              <li><strong><br>Nombre</strong></li>
              <li>
                <div class="input">
                  <input id="nombre" type="text" class="validate"  placeholder="Nombre(s)">
                </div>
              </li>
              <li><strong><br>Apellido paterno</strong></li>
              <li>
                <div class="input">
                  <input id="apellidoP" type="text" class="validate"  placeholder="Apellido paterno">
                </div>
              </li>
              <li><strong><br>Apellido materno</strong></li>
              <li>
                <div class="input">
                  <input id="apellidoM" type="text" class="validate"  placeholder="Apellido materno">
                </div>
              </li>
              <li><strong><br>Correo</strong></li>
              <li>
                <div class="input">
                  <input id="correo" type="email" class="validate"  placeholder="correo@mail.com">
                </div>
              </li>
              <li><strong><br>Roles</strong></li>
              <li>
                <div class="input-field m4">
                  <select name = "selRol" multiple>
                    <option value="1">Terapeuta</option>
                    <option value="2">Gestor</option>
                    <option value="3">Administrador</option>
                    <option value="4">Nuevo</option>
                  </select>
                  <label>Selecciona los roles que desees asignar.</label>
                </div>
              </li>
            </ul>
          </form>
        </div>
        <div class="modal-footer">
          <a href="./gestion-usuarios" class="modal-close waves-effect btn-flat">Cancelar</a>
          <a href="#"  class="modal-close waves-effect btn-flat validarRol">Agregar</a>
        </div>
    </div><!--Fin Modal Structure agregar usuario-->
</div>    
<%- include('include/footer.ejs') %>